<style>
.motherboard
{
    border: 2px solid black;
    padding: 10px;
    margin: 10px;
    display: inline-block;
}
</style>

<h1>Motherboards</h1>

<% @motherboards.each do |item| %>
    <div class="motherboard">
        <%= link_to (image_tag root_url + "images/" + item.filename, size: "100x100"), item %>
        <p><%= item.name %></p>
        <p>$<%= item.price %></p>
    </div>
<% end %>



<%= link_to 'Back to Homepage', items_path %>
