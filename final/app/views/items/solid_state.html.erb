<style>
.solid_state
{
    border: 2px solid black;
    padding: 10px;
    margin: 10px;
    display: inline-block;
}
</style>

<h1>Solid State Drives</h1>
<hr>
<br>

<% @solid_state.each do |item| %>
    <div class="solid_state">
    <%= link_to (image_tag root_url + "images/" + item.filename, size: "100x100"), item %>
    <p><%= item.name %></p>
    <p>$<%= item.price %></p>
    </div>
<% end %>



<%= link_to 'Back to Homepage', items_path %>
