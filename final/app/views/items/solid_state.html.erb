<style>
.solid_state
{
    border: 2px solid black;
    padding: 10px;
    margin: 10px;
    display: inline-block;
}
.item
{
    text-align: center;
}
h1
{
    text-align: center;
}
</style>

<h1>Solid State Drives</h1>
<hr>
<br>

<% @solid_state.each do |item| %>
    <div class="solid_state">
    <p class="item"><%= link_to (image_tag root_url + "images/" + item.filename, size: "100x100"), item %></p>
    <p class="item"><%= item.name %></p>
    <p class="item">$<%= item.price %></p>
    <p class="item"><%= link_to 'Add to cart', add_item_path(item) %> </p>
    </div>
<% end %>



<%= link_to 'Back to Homepage', items_path %>
