<h1>Listing Topics</h1>

<table>
    <thead>
        <tr>
            <th>URL</th>
            <th>Topic</th>
            <th>Annotdation</th>
            <th>DateTime</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @references.each do |reference| %>
            <tr>
                <td><%= reference.URL %></td>
                <td><%= reference.topic %></td>
                <td><%= reference.annotation %></td>
                <td><%= reference.datetime %></td>
                <td><%= link_to 'Show', reference %></td>
                <td><%= link_to 'Edit', edit_reference_path(reference) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'New Reference', controller: "references", action: "new" %>

